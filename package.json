{
  "name": "omnixent",
  "version": "0.0.1",
  "description": "The search engine of search engines",
  "main": "index.js",
  "repository": "git@github.com:omnixent/omnixent.git",
  "author": "Michele Riva <ciao@micheleriva.it>",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "build": "tsc",
    "commit": "cz",
    "clean": "rimraf dist",
    "dev": "nodemon",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc.js",
    "lint": "tslint --fix .",
    "run:docker": "node ./src/main.js",
    "semantic-release": "semantic-release",
    "test": "jest --coverage",
    "upgrade-interactive": "npm-check --update"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.1",
    "codecov": "^3.8.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^26.6.3",
    "node-fetch": "^2.6.1",
    "rambda": "^6.7.0",
    "redis": "^3.0.2",
    "response-time": "^2.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.5.8",
    "@types/redis": "^2.8.28",
    "@types/response-time": "^2.3.4",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "yarn clean && exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "tslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
